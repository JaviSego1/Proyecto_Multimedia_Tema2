<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ordenador"
        android:layout_marginBottom="24dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/buttonLlamada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/morado"
            android:text="Llamada"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rounded" />

        <Button
            android:id="@+id/buttonCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:backgroundTint="@color/morado"
            android:background="@drawable/button_rounded" />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="2"
        android:paddingTop="16dp"
        android:layout_marginBottom="24dp"
        android:gravity="center">

        <Button
            android:id="@+id/buttonUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UJA"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/morado"
            android:layout_marginEnd="12dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:background="@drawable/button_rounded" />

        <Button
            android:id="@+id/buttonAlarma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarma"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/morado"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:background="@drawable/button_rounded" />
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="2"
        android:paddingTop="16dp"
        android:layout_marginBottom="24dp"
        android:gravity="center">

        <Button
            android:id="@+id/buttonDados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dados"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:backgroundTint="@color/morado"
            android:background="@drawable/button_rounded" />

        <Button
            android:id="@+id/buttonChistes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chistes"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:backgroundTint="@color/morado"
            android:layout_marginStart="12dp"
            android:background="@drawable/button_rounded" />
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="1"
        android:gravity="center">

        <Button
            android:id="@+id/buttonConfiguracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuracion"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:backgroundTint="@color/morado"
            android:background="@drawable/button_rounded" />
    </GridLayout>

</LinearLayout>
